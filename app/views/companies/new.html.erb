<h1 style="text-align: center">Company Info</h1>

<div style="margin-top: 20px;" class="row">
<div class="col-xs-4 col-xs-offset-4">
<%= form_with scope: :companies, url: new_company_path, class: "form-horizontal" do |form| %>
<div class="form-group">
		<%= form.label :company_name, "Company Name:" %>
		<%= form.text_field(:company_name, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :postitions_reference, "Apply Position/Reference:" %>
		<%= form.text_field(:postitions_reference, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact1, "First Contact Info:" %>
		<%= form.text_area(:contact1, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact2, "Second Contact Info:" %>
		<%= form.text_area(:contact2, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :contact3, "Third Contact Info:" %>
		<%= form.text_area(:contact3, class: 'form-control') %>
</div>
<div class="form-group">
		<%= form.label :progress, "Current Progress:" %>
		<%= form.select :progress, ['Resume Sent', 'Screen', 'Interview', 'Negotiation', 'Completed'] %>
</div>

<div class="form-group">
		<%= form.submit('Create', class: 'btn-sm btn-primary') %>
</div>
<% end %>
</div>
</div>
