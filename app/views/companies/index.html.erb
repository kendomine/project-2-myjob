<div class="container-fluid">
<div class="row">
<div class="col-xs-10 col-xs-offset-1">
  <%= link_to "New Company", companies_path%>
  <%= link_to "New Task", tasks_path%>
  <!-- <%=render "chart"%> -->
  <%= column_chart Company.where("user_id = #{current_user.id}").group_by_day(:created_at).count, ytitle: "Resume Sent" %>
</div>
</div>
<%=render 'progress'%>


<div class="row">
<div class="col-xs-10 col-xs-offset-1">
<%current_user.tasks.each do |task|%>
  <h1><%=task.subject%></h1>
  <p><%=task.details%></p>
  <%=link_to task_edit_path(task.id) do%>
    <span class="glyphicon glyphicon-pencil"></span>
  <%end%>
  <%=link_to task_path(task.id), method: :delete do%>
    <span class="glyphicon glyphicon-trash"></span>
  <%end%>
<%end%>
</div>
</div>
</div>
